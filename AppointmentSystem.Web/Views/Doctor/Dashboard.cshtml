@{
    var totalSlides = Model.SlotsGroupedByDate.Count();
    var startIndex = totalSlides > 1 ? totalSlides - 2 : 0; // Ensure there's at least one slide
}

<div id="slotCarousel" class="carousel slide" data-bs-interval="false">
    <div class="carousel-inner">
        @foreach (var group in Model.SlotsGroupedByDate.Select((value, index) => new { Value = value, Index = index }))
        {
                <div class="carousel-item @(group.Index == startIndex ? "active" : "")">
                    <div class="container">
                        <div class="card">
                            <div class="card-header text-center">
                                <h5>@group.Value.Key.ToString("dddd, dd MMM yyyy")</h5> <!-- Date as slide title -->
                            </div>
                            <div class="card-body">
                                <div class="row">
                                @* @foreach (var slot in group.Value) *@
                                @* { *@
               @foreach (var slot in group.Value)
               {
        <div class="col-md-4">
            <div class="card text-center mb-3">
                <div class="card-body">
                    <h6>
                        <strong>@slot.StartTime.ToString(@"hh\:mm") - @slot.EndTime.ToString(@"hh\:mm")</strong>
                    </h6>

                                                @* Handle status display properly *@
                                                @if (slot.Status == SlotStatus.Available.ToString())
                                                {
                                                    @if (DateTime.Now > slot.Date.Add(slot.EndTime))
                                                    {
                                    <div class="mt-2 text-danger fw-bold">Not Booked</div>  @* Available but time passed *@
                                                    }
                                                    else
                                                    {
                                    <span class="badge bg-success">Available</span>  @* Normal Available status *@
                                                    }
                                                }
                                                else if (slot.Status == SlotStatus.Booked.ToString())
                                                {
                            <span class="badge bg-warning text-dark">Booked</span>
                                                }
                                                else if (slot.Status == SlotStatus.Completed.ToString())
                                                {
                            <span class="badge bg-secondary">Completed</span>
                                                }
                                                else if (slot.Status == SlotStatus.Cancelled.ToString())
                                                {
                            <span class="badge bg-danger">Cancelled</span>
                                                }
                </div>
            </div>
        </div>

                                    }

                                          
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>

    <!-- Carousel Controls (Manual Navigation) -->
    <button class="carousel-control-prev" type="button" data-bs-target="#slotCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#slotCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


   
    <!-- Apply Leave Modal -->
    <div class="modal fade" id="applyLeaveModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Apply for Leave</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="DoctorDashboard" asp-action="ApplyLeave">
                        <div class="mb-3">
                            <label class="form-label">Leave Date</label>
                            <input type="date" class="form-control" name="leaveDate" required />
                        </div>
                        <button type="submit" class="btn btn-danger">Apply Leave</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
