@using AppointmentSystem.Dtos.Admin
@model AdminResponseDto 

<nav class="navbar navbar-expand-lg  nav-bg-color">
    <div class="container-fluid">
        <a class="navbar-brand  text-white" href="#">Admin Dashboard</a>
  

        <button class="navbar-toggler nav-color" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
    <i class="bi bi-list"></i> 
</button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                @if (Model.Role == "SuperAdmin")
                {
                        <li class="nav-item">
                                <a class="nav-link nav-color" asp-controller="Admin" asp-action="GetAllAdmin"> <i class="bi bi-people-fill me-2"></i>Manage Admins</a>
                        </li>
                }
                <li class="nav-item">
                    <a class="nav-link nav-color" asp-controller="ManageDoctor" asp-action="ViewAll"> <i class="bi bi-heart-pulse-fill me-2"></i>Manage Doctors</a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link nav-color" asp-controller="Admin" asp-action="ManageSpecialization"> <i class="bi bi-tags-fill me-2"></i>Manage Specialization</a>
                </li>
                @* <li class="nav-item"> *@
                @*     <a class="nav-link nav-color" asp-controller="Admin" asp-action="ViewDoctorLeaves" > <i class="bi bi-calendar-x-fill me-1"></i>Doctor Leaves</a> *@
                @* </li> *@
            </ul>

           <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="profileDropdown" data-bs-toggle="dropdown">
                     <div class="icon-circle bg-light main-color me-2 d-flex align-items-center justify-content-center" style="width: 23px; height: 23px;">
                        <i class="bi bi-person-fill"></i>  
                    </div>
                   
                    <span class="fw-bold">@Model.Fullname</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="profileDropdown">
                    <li class="dropdown-item text-center">
                        <strong>@Model.Fullname</strong> 
                    </li>
                    <li class="dropdown-item text-center">
                        <small class="text-muted">@Model.Email</small>
                    </li>
                    <li class="dropdown-item text-center">
                        <span class="badge bg-primary">@Model.Role</span>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a href="#" class="dropdown-item text-warning" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                            <i class="bi bi-key-fill"></i> Change Password
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<div class="container mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card  shadow-lg">
                <div class="card-body  text-center">
                    <h5 class="card-title">Generate Tomorrow's Slots</h5>
                    <form method="post" asp-controller="Admin" asp-action="GenerateTomorrowSlots">
                        <button type="submit" class="btn btn-color mt-3">
                            <i class="bi bi-calendar-check"></i> Generate Slots
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

